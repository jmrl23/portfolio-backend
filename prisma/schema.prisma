generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model File {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())

  fileId   String @unique
  name     String
  size     Int
  mimetype String
  url      String

  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  Testament Testament[]
}

model Project {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String   @unique
  description   String
  repositoryUrl String
  previewUrl    String?
  topics        String[] @default([])
  images        File[]
}

model AuthApiKey {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())

  key         String    @unique
  description String?
  permissions String[]
  expires     DateTime?
  revoked     Boolean   @default(false)
}

model Testament {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())

  author  String
  bio     String?
  content String

  image   File?   @relation(fields: [imageId], references: [id])
  imageId String?
}
